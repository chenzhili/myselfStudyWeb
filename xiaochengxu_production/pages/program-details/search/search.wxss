/* pages/program-details/search/search.wxss */
.input_item{box-sizing:border-box;background-color:#fff;width:100%;}
.input_item input{width:48px;text-align:center;border:1px solid #ddd;border-radius:5px;display:inline-block;vertical-align:middle;margin-bottom:2px;padding:4px 0;}
.borde-bottom{border-bottom:1px solid #ddd;}
.margin_top{margin-top:20px;}
.text_name{border-top:1px solid #ddd;border-bottom:1px solid #ddd;}
.double_slider{position:relative;margin:30px 10px 10px 10px;box-sizing:border-box;}
.bar{display:inline-block;width:300px;height:10px;border-radius:10px;background:linear-gradient(to top, rgba(66,139,202,1) 0%,rgba(127,195,232,1) 100%);
    border-top:1px solid #428bca;border-bottom:1px solid #428bca;}
.slider{position:absolute;top:0;width:20px;height:20px;border-radius:50%;background:linear-gradient(to bottom, rgba(255,255,255,1) 0%,rgba(220,220,220,1) 20%,rgba(255,255,255,1) 100%);border:1px solid #aaa;text-align:center;line-height:20px;font-size:12px;color:#aaa;}
.percent{position:absolute;top:-30px;padding:2px 4px;text-align:center;color:#333;background-color:rgba(0,0,0,0.1);font-size:12px;border-radius:3px;}
.percent_first{left:0;}
.percent_second{right:0;}
