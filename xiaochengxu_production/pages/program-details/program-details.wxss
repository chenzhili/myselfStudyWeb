/* pages/program-details/program-details.wxss */
.play-item{display:inline-block;width:33.3%;text-align:center;font-size:14px;line-height:30px;height:30px;box-sizing:border-box;}
.play{width:100%;height:40px;line-height:40px;box-sizing:border-box;border-bottom:1px solid #ddd;white-space:nowrap;position:fixed;top:44px;background-color:#fff;}
.play-item.active{padding-bottom:4px;border-bottom:2px solid #00ABF3;color:#00ABF3;}
.num_kai{width:90%;margin:10px auto;font-size:14px;margin-top:40px;}
.num_details{width:100%;}
.num_item{display:inline-block;width:10%;box-sizing:border-box;}
.num{width:28px;height:28px;line-height:28px;text-align:center;color:#fff;background-color:#00ABF3;border-radius:50%;}
.text{line-height:24px;}
.spectial_color{color:#00ABF3;}
.details{width:100%;background-color:#F1F9FF;}
.details>view{width:25%;text-align:center;font-size:11px;line-height:30px;}
.play_item{width:90%;margin:10px auto;line-height:30px;font-size:14px;}
.date_details{display:inline-block;width:16px;height:16px;text-align:center;border:1px solid #f00;color:#f00;line-height:16px;border-radius:50%;}
.red_color{color:#f00;}
.footer{position:fixed;bottom:0;border-top:1px solid #ddd;width:100%;box-sizing:border-box;background-color:#fff;}
.footer text{display:block;font-size:12px;line-height:10px;padding-left:2%;}
.company{width:100%;line-height:20px;color:#fff;text-align:center;background-color:#00ABF3;font-size:12px;margin-top:10px;}
.container{margin-bottom:74px;}