.bar-container{width:100%;background-color:#00ABF3;position:fixed;z-index:999;height:44px;top:0;line-height:44px;color:#fff;text-align:center;}
.bar-container .title{position:absolute;top:50%;left:50%;width:50%;height:44px;transform:translateX(-50%) translateY(-50%);font-size:17px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.bar-container .bar-left{position:absolute;left:0;width:30%;height:100%;}
.bar-container .left-button{width:26%;height:100%;margin-left:4px;}
.bar-container .left-button image{width:100%;height:70%;margin-top:30%;}
.bar-container .bar-text{font-size:14px;display:flex;height:100%;}
.bar-container .bar-text .text{width:100%;padding:2px 4px;text-align:center;height:20px;line-height:20px;margin:auto;}
.bar-container .bar-text .text:active{background-color:#DEDEDE;color:rgba(0,0,0,.6);}
.bar-container .bar-text image{width:20px;height:20px;vertical-align:middle;}
.bar-container .bar-right{position:absolute;right:0;width:30%;height:100%;}
.bar-container .bar-text .date{position:absolute;top:34px;width:100%;line-height:20px;text-align:center;border:1px solid #ddd;background-color:#fff;color:#000;}
.kf{color:#fff;background:none;border-radius:0;}
.kf:after{border:1px solid transparent;}
