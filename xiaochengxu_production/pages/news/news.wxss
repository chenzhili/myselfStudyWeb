#news{background-color:#ffffff;}
#news .new-box{width:100%;height:45px;margin-bottom:5px;}
#news .new-box .new-box-center{width:85%;height:50px;margin: auto;text-align: center;line-height:35px}
#news .new-box .new-box-center view{width: 50%;height:35px;float:left;letter-spacing:0.1em;border-radius:3px;margin-top:8px;background-color:#D0CCC7;color:#fff;}
#news .new-box .new-box-center .have-active{background:#00ABF3;color:#fff;}
#news .list-box{width:100%;padding-bottom: 10px;}
#news .list-box .list{width:100%;height: 40px;text-align: center;line-height:40px;background:#00ABF3;color:#fff;}
#news .list-box .list .list-left{width:30%;height:auto;float: left;margin-left: 10px;padding-right:20px;text-align: left}
#news .list-box .list .list-right{width:20%;height:auto;float: right;padding-left:50px;}
#news .lists{width:100%;height: 40px;text-align: center;line-height:40px;background:#E7D1F0;margin-top: 50%}
#news .lists .list-left{width:30%;height:auto;float: left;color: #F587A2}
#news .lists .list-right{width:30%;height:auto;float: right;color: #645FF0}
#news .row{width:100%;height:35px;text-align:left;line-height:35px;}
.row{padding:5px;}
#news .row view{width:100%;height:30px;border-bottom:1px #cccccc solid;text-align:left;padding-left: 5px;line-height:30px;overflow: hidden;text-overflow: ellipsis}
#news .list-box .list .list-right image{width:20px;margin-bottom:4px;vertical-align:middle;}